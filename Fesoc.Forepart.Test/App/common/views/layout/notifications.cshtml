<div ng-controller="common.views.layout.notifications as vm">
    <div class="alert alert-success alert-dismissable" ng-if="vm.messageType == vm.messageTypeOptions.INFO">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h3>{{vm.title}}</h3>
        {{vm.message}}
    </div>
    <div class="alert alert-success alert-dismissable" ng-if="vm.messageType == vm.messageTypeOptions.SUCCESS">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h3>{{vm.title}}</h3>
        {{vm.message}}
    </div>
    <div class="alert alert-error alert-dismissable" ng-if="vm.messageType == vm.messageTypeOptions.FAIL">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h3>{{vm.title}}</h3>
        {{vm.message}}
    </div>
    <div class="alert alert-danger alert-dismissable" ng-if="vm.messageType == vm.messageTypeOptions.COMFIRM">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h3>{{vm.title}}</h3>
        {{vm.message}}
    </div>
</div>